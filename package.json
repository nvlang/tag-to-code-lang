{
  "name": "@nvl/tag-to-code-lang",
  "version": "1.1.0",
  "description": "Given a language tag, return the corresponding programming language name. For example: `ts` â†’ `TypeScript`.",
  "keywords": [
    "linguist",
    "language",
    "data",
    "programming-languages"
  ],
  "type": "module",
  "author": {
    "name": "N. V. Lang",
    "email": "npm@nvlang.dev",
    "url": "https://nvlang.dev/"
  },
  "license": "MIT",
  "module": "./dist/mod.js",
  "main": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nvlang/tag-to-code-lang.git"
  },
  "bugs": {
    "url": "https://github.com/nvlang/tag-to-code-lang/issues"
  },
  "files": [
    "dist",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . && tsc -p tsconfig.json --noEmit --skipLibCheck",
    "build": "tsc -p tsconfig.release.json",
    "test": "vitest run --coverage",
    "prepare": "husky",
    "ci:version": "changeset version && pnpm exec tsx scripts/update-jsr-versions.ts && pnpm install --no-frozen-lockfile && pnpm run format",
    "ci:publish": "pnpm publish --provenance --access public --no-git-checks && pnpm exec jsr publish --unstable-sloppy-imports --allow-dirty && changeset tag"
  },
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",

{
  "compilerOptions": {
    // This config is, by default, just for linting
    "noEmit": true,
    //
    "allowSyntheticDefaultImports": true,
    // Best practices
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    // Performance
    "skipLibCheck": true, // recommended
    // Aliases
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true, // default: true iff module is "Node16" or "NodeNext"
    "exactOptionalPropertyTypes": true, // recommended
    "forceConsistentCasingInFileNames": true, // recommended
    "importHelpers": true,
    "lib": ["ESNext"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    // Basic settings
    "rootDir": ".",
    // Debugging
    "sourceMap": true,
    // Type-checking
    "strict": true,
    // Versions and APIs
    "target": "ES2018"
  },
  "exclude": ["coverage", "dist", "external", "node_modules", "res"],
  "include": ["*.config.js", "*.config.ts", "src", "tests", "scripts"]
}
